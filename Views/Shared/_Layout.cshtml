<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Home")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-top:0px">
    <nav class="navbar navbar-expand-lg navbar-light Color fixed-top">
        <div class="navbar-brand">
            <a class="Menu" href="#">REAL ESTATE</a>
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="navbar-brand"><a class="Menu ItemCenter" href="#">BUY</a></li>
                <li class="navbar-brand"><a class="Menu ItemCenter" href="#">SELL</a></li>
                <li class="navbar-brand"><a class="Menu ItemCenter" href="#">RENT</a></li>
                <li class="navbar-brand"><a class="Menu ItemCenter" href="#">NEWS</a></li>
                <li class="navbar-brand dropdown">
                    <a class="dropdown-toggle ItemCenter Menu" data-toggle="dropdown" href="#">About Us<span class="caret"></span></a>
                    <ul class="dropdown-menu Menu-dropdown">
                        <li><div class="dropdown-item Menu-dropdownitem" href="#">Introduction</div></li>
                        <li><div class="dropdown-item Menu-dropdownitem" href="#">Carreer</div></li>
                        <li><div class="dropdown-item Menu-dropdownitem" href="#">FAQ</div></li>
                        <li><div class="dropdown-item Menu-dropdownitem" href="#">Contact Us</div></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
           <div>
               <img class="glyphicon glyphicon-menu-hamburger" />
           </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
