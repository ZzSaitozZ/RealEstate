@*//Label transition script//--------------------------------------------------*@
<script>
    $('input[name=radio1]').change(function () {
        var x = $(this).val();
        if (x == "1") {
            $('label[name=label0]')[0].className = $('label[name=label0]')[0].className.replace(" active", "");
            $('label[name=label1]')[0].className += " active";
            $('span[name=arrow1]').show();
            $('span[name=arrow0]').hide();
            $('#wordchange')[0].innerHTML = "Tìm mua nhà cùng Propzy";
            $('.select2-selection__placeholder')[0].innerHTML = "Chọn địa điểm cần mua";

        }
        else {
            $('label[name=label1]')[0].className = $('label[name=label1]')[0].className.replace(" active", "");
            $('label[name=label0]')[0].className += " active";
            $('span[name=arrow0]').show();
            $('span[name=arrow1]').hide();
            $('#wordchange')[0].innerHTML = "Tìm thuê nhà cùng Propzy";
            $('.select2-selection__placeholder')[0].innerHTML = "Chọn địa điểm cần thuê";
        }
    })
</script>

